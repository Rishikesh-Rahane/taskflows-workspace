{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2022",
    "customConditions": ["@taskflows-workspace/source"],
    "baseUrl": ".",
    "paths": {
      "@taskflows-workspace/shared": ["shared/src/index.ts"]
    }
  }
}
